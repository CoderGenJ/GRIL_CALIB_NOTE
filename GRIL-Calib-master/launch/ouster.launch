<launch>
    <!-- Launch file for ouster Ouster LiDAR -->

    <arg name="rviz" default="true" />

    <rosparam command="load" file="$(find gril_calib)/config/ouster64.yaml" />

    <node pkg="gril_calib" type="gril_calib" name="laserMapping" output="screen"/>

    <param name="point_filter_num" type="int" value="5"/>
    <param name="max_iteration" type="int" value="5" />
    <param name="cube_side_length" type="double" value="2000" />

    <group if="$(arg rviz)">
      <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find gril_calib)/rviz_cfg/spinning.rviz" />
    </group>

    launch-prefix="gdb -ex run --args"

</launch>
